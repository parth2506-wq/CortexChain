        "id": "dWmla3txnshn",
        "outputId": "44d992a3-78d2-415e-8a00-eb500545fd06"
      },
      "outputs": [
        {
          "output_type": "stream",
          "name": "stdout",
          "text": [
            "✅ Feature engineering completed\n",
            "Final shape: (906000, 21)\n",
            "Columns: ['date', 'store', 'item', 'sales', 'day_of_week', 'is_weekend', 'month', 'week_of_year', 'quarter', 'lag_1', 'lag_7', 'lag_14', 'rolling_mean_7', 'rolling_mean_14', 'rolling_std_7', 'inventory_level', 'days_of_cover', 'is_demand_spike', 'is_perishable', 'shelf_life_days', 'expiry_risk_score']\n"
          ]
        }
      ],
      "source": [
        "import pandas as pd\n",
        "import numpy as np\n",
        "\n",
        "# -------------------------\n",
        "# Load data\n",
        "# -------------------------\n",
        "train = pd.read_csv(\"/content/train (1).csv\")\n",
        "train[\"date\"] = pd.to_datetime(train[\"date\"])\n",
        "\n",
        "# Sort (ABSOLUTELY REQUIRED)\n",
        "train = train.sort_values([\"store\", \"item\", \"date\"]).reset_index(drop=True)\n",
        "\n",
        "# -------------------------\n",
        "# TIME FEATURES\n",
        "# -------------------------\n",
        "train[\"day_of_week\"] = train[\"date\"].dt.weekday\n",
        "train[\"is_weekend\"] = train[\"day_of_week\"].isin([5, 6]).astype(int)\n",
        "train[\"month\"] = train[\"date\"].dt.month\n",
        "train[\"week_of_year\"] = train[\"date\"].dt.isocalendar().week.astype(int)\n",
        "train[\"quarter\"] = train[\"date\"].dt.quarter\n",
        "\n",
        "# -------------------------\n",
        "# LAG FEATURES\n",
        "# -------------------------\n",
        "for lag in [1, 7, 14]:\n",
        "    train[f\"lag_{lag}\"] = (\n",
        "        train.groupby([\"store\", \"item\"])[\"sales\"].shift(lag)\n",
        "    )\n",
        "\n",
        "# -------------------------\n",
        "# ROLLING FEATURES\n",
        "# -------------------------\n",
        "for window in [7, 14]:\n",
        "    train[f\"rolling_mean_{window}\"] = (\n",
        "        train.groupby([\"store\", \"item\"])[\"sales\"]\n",
        "        .transform(lambda x: x.rolling(window, min_periods=1).mean())\n",
        "    )\n",
        "\n",
        "# Rolling Std (Volatility)\n",
        "train[\"rolling_std_7\"] = (\n",
        "    train.groupby([\"store\", \"item\"])[\"sales\"]\n",
        "    .transform(lambda x: x.rolling(7, min_periods=1).std())\n",
        ").fillna(0)\n",
        "\n",
        "# -------------------------\n",
        "# INVENTORY FEATURE (Simulated)\n",
        "# -------------------------\n",
        "LEAD_TIME = 7\n",
        "SAFETY_FACTOR = 1.2\n",
        "\n",
        "train[\"inventory_level\"] = (\n",
        "    train[\"rolling_mean_7\"] * LEAD_TIME * SAFETY_FACTOR\n",
        ").astype(int)\n",
        "\n",
        "# Days of Cover (Business-friendly metric)\n",
        "train[\"days_of_cover\"] = train[\"inventory_level\"] / (train[\"rolling_mean_7\"] + 1e-5)\n",
        "\n",
        "# Demand Spike Flag\n",
        "train[\"is_demand_spike\"] = (\n",
        "    train[\"sales\"] > train[\"rolling_mean_7\"] * 1.3\n",
        ").astype(int)\n",
        "\n",
        "# -------------------------\n",
        "# OPTIONAL: Grocery Niche (Simulated Perishability + Expiry Risk)\n",
        "# -------------------------\n",
        "# Mark some items as perishable (demo assumption)\n",
        "train[\"is_perishable\"] = train[\"item\"].isin([1, 2, 3, 4, 5]).astype(int)\n",
        "\n",
        "# Shelf life days (perishable=7 days, non-perishable=30 days)\n",
        "train[\"shelf_life_days\"] = np.where(train[\"is_perishable\"] == 1, 7, 30)\n",
        "\n",
        "# Expiry risk score (higher = more wastage risk)\n",
        "train[\"expiry_risk_score\"] = (\n",
        "    train[\"inventory_level\"] / (train[\"rolling_mean_7\"] + 1e-5)\n",
        ") / train[\"shelf_life_days\"]\n",
        "\n",
        "# -------------------------\n",
        "# DROP NA FROM LAGS\n",
        "# -------------------------\n",
        "train = train.dropna().reset_index(drop=True)\n",
        "\n",
        "# Save\n",
        "train.to_csv(\"train_features.csv\", index=False)\n",
        "\n",
        "print(\"✅ Feature engineering completed\")\n",
        "print(\"Final shape:\", train.shape)\n",
        "print(\"Columns:\", train.columns.tolist())\n"
      ]
    }
  ]
}
