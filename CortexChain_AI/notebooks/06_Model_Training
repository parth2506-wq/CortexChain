        "\n",
        "    mae = mean_absolute_error(y_val, preds)\n",
        "    rmse = np.sqrt(mean_squared_error(y_val, preds))\n",
        "\n",
        "    results.append({\"Model\": name, \"MAE\": mae, \"RMSE\": rmse})\n",
        "    print(f\"âœ… {name} -> MAE: {mae:.4f}, RMSE: {rmse:.4f}\")\n",
        "\n",
        "    if rmse < best_rmse:\n",
        "        best_rmse = rmse\n",
        "        best_model_name = name\n",
