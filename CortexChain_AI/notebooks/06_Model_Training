        "models = {\n",
        "    \"LinearRegression\": LinearRegression(),\n",
        "    \"HistGradientBoosting\": HistGradientBoostingRegressor(\n",
        "        max_iter=300,\n",
        "        learning_rate=0.05,\n",
        "        max_depth=6,\n",
        "        random_state=42\n",
        "    )\n",
        "}\n",
        "\n",
        "# ----------------------------\n",
        "# 4) Train + Evaluate\n",
        "# ----------------------------\n",
        "results = []\n",
        "best_model_name = None\n",
        "best_model = None\n",
        "best_rmse = float(\"inf\")\n",
        "\n",
        "for name, model in models.items():\n",
